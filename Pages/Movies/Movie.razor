@page "/movie/{id:int?}"
@layout FrontLayout

@inject ITmdbService Service
@inject NavigationManager Navigation

<title>@Title</title>


@if (IsProcessing || Entity is null)
{
    <_Loading />
}
else
{
    <div id="movie-details" style="--background: url(@Entity.BackdropPath)">
        <div class="@App?.GetContentClass() py-4">
            @* <h1 class="p-4">
                    <i class="me-2 bi bi-film text-primary"></i> @Entity.Title - @Entity.Id
                </h1> *@

            <div class="mt-5 row">
                <div class="col-12 col-md-4 col-xl-3 text-center text-md-start mb-3">
                    <img class="img-fluid" id="movie-poster" alt="movie poster" src="@Entity.PosterPath" />
                    <div class="mt-2 p-2 d-flex justify-content-center align-items-center rounded bg-transparent40">
                        <h4 class="m-0">@Entity.VoteAverage<span class="h5 ms-4">[ @Entity.VoteCount votes ]</span></h4>
                    </div>
                </div>
                <div class="col-12 col-md-8 col-xl-9">
                    <div class="mx-2 p-2 ps-4 rounded bg-transparent40">
                        <a href="https://www.themoviedb.org/movie/@Entity.Id" class="text-decoration-none" target="_blank">
                            <h1 class="mb-0">@Entity.Title</h1>
                        </a>
                        <div class="lead mb-3">@Entity.Tagline</div>
                        <div class="hstack gap-2">
                            <span>@ReleaseDate | </span>
                            <span>@Hours hour(s) @Minutes minutes</span>
                        </div>
                        <div class="hstack gap-2 my-2">
                            @foreach (var genre in Entity.Genres)
                            {
                                <span class="badge bg-dark-subtle">@genre.Name</span>
                            }
                        </div>
                        <p>TMDB Id: @Entity.Id</p>
                        <h5 class="lead fw-bold pt-3 mt-3">Overview</h5>
                        <p>@Entity.Overview</p>

                        @* <h6 class="mt-2">Director: <span></span></h6>
                        <h6 class="mt-2">Cast: <span></span></h6>
                        <h4>Score: @((Entity.VoteAverage * 10).ToString("F2"))%</h4> *@

                        @if (!string.IsNullOrEmpty(MovieTrailer?.Key))
                        {
                            <div class="mt-2" id="btn-trailer">
                                <button class="btn btn-outline-warning" data-bs-toggle="modal" data-bs-target="#youtube-modal">
                                    <i class="bi bi-play"></i> Watch Trailer
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="modal" tabindex="-1" id="youtube-modal">
    <div class="modal-dialog modal-dialog-centered modal-xl">
        <div class="modal-content modal-background">
            <div class="modal-header">
                <h5 class="modal-title" id="modal-title">@(Entity?.Title ?? "Movie Trailer")</h5>
                <button type="button" data-bs-dismiss="modal" aria-label="Close" class="ms-auto">
                    <i class="bi bi-x"></i>
                </button>
            </div>
            <div class="modal-body">
                <div class="ratio ratio-16x9">
                    <iframe id="modal-trailer" src="" allowfullscreen></iframe>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-warning ms-auto" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


@code {
    [CascadingParameter] AppState? App { get; set; }

    [Parameter] public int Id { get; set; }

    TmdbDetails? Entity { get; set; }
    TmdbVideo? MovieTrailer { get; set; }

    string? Title;

    bool IsProcessing { get; set; } = true;

    string? ReleaseDate;
    int? Hours;
    int? Minutes;


    protected override async Task OnParametersSetAsync()
    {
        Entity = await Service.GetMovieByIdAsync(Id);
        MovieTrailer = await Service.GetMovieTrailerByIdAsync(Id);

        Title = Entity?.Title;
        
        bool dateParsed = DateTime.TryParse(Entity?.ReleaseDate, out DateTime releaseDate);
        if (dateParsed) ReleaseDate = releaseDate.ToString("dd. MMMM, yyyy.");

        Hours = Entity?.Runtime / 60;
        Minutes = Entity?.Runtime % 60;

        IsProcessing = false;
        StateHasChanged();
    }
}