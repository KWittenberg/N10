@page "/movie/{id:guid?}"
@layout FrontLayout

@inject IMovieRepository Repository
@inject ITmdbService Service


@if (IsProcessing || Entity is null)
{
    <_Loading />
}
else
{
    <title>@TmdbMovie?.Title</title>
    
    <_YouTubeModal Entity="TmdbMovie" MovieTrailer="MovieTrailer" />

    <div id="movie-details" style="--background: url(@BackdropPath)">
        <div class="@App?.GetContentClass() py-4">
            <div class="mt-5 row">
                <div class="col-12 col-md-4 col-xl-3 text-center text-md-start mb-3">
                    <img class="img-fluid" id="movie-poster" alt="movie poster" src="@PosterPath" />

                    <_Rate Entity="@TmdbMovie" />

                    @if (!string.IsNullOrEmpty(MovieTrailer?.Key))
                    {
                        <div class="mt-3" id="btn-trailer">
                            <button class="btn btn-outline-warning w-100" data-bs-toggle="modal" data-bs-target="#youtube-modal">
                                <i class="bi bi-play"></i> Watch Trailer
                            </button>
                        </div>
                    }
                    @if (TmdbMovie?.BelongsToCollection is not null)
                    {
                        <div class="mt-5 text-center">
                            <img class="img-fluid" id="movie-poster" alt="movie poster" src="@CollectionPosterPath" />
                            <a class="text-decoration-none" href="@BelongsToCollectionId" target="_blank"><h5 class="mt-2">@TmdbMovie.BelongsToCollection.Name</h5></a>
                        </div>
                    }
                </div>
                <div class="col-12 col-md-8 col-xl-9">
                    <div class="p-4 rounded bg-transparent50">
                        <a href="https://www.themoviedb.org/movie/@Entity.Id" class="text-decoration-none" target="_blank">
                            <h1 class="mb-0">@TmdbMovie?.Title</h1>
                        </a>
                        <div class="lead mb-3">@TmdbMovie.Tagline</div>
                        <div class="hstack gap-2">
                            <span>@ReleaseDate | </span>
                            <span>@(TmdbMovie?.Runtime / 60) hour(s) @(TmdbMovie?.Runtime % 60) minutes</span>
                        </div>
                        <div class="hstack gap-2 my-2">
                            @foreach (var genre in TmdbMovie.Genres)
                            {
                                <span class="badge bg-dark-subtle">@genre.Name</span>
                            }
                        </div>
                        
                        <h5 class="mt-4 fw-bold">Overview</h5>
                        <p>@TmdbMovie?.Overview</p>

                        @if (Credits?.Crews is not null)
                        {
                            <_Crews Crews="Credits.Crews" />
                        }
                        @if (Credits?.Casts is not null)
                        {
                            <_Casts Casts="Credits.Casts" />
                        }
                    </div>

                    @if (Credits?.Casts is not null)
                    {
                        <_ActorSwiper Actors="@Credits.Casts" />
                    }
                </div>
            </div>
        </div>
    </div>
}


@code {
    [CascadingParameter] AppState? App { get; set; }

    [Parameter] public Guid? Id { get; set; }

    MovieDto? Entity { get; set; }
    TmdbDetails? TmdbMovie { get; set; }
    TmdbCredits? Credits { get; set; }
    TmdbVideo? MovieTrailer { get; set; }

    string? Title;
    string? ReleaseDate;

    bool IsProcessing { get; set; } = true;


    string BackdropPath => string.IsNullOrEmpty(TmdbMovie?.BackdropPath) ? Globals.NoImage : $"{Globals.BaseTmdbImageUrl}{TmdbMovie?.BackdropPath}";
    string PosterPath => string.IsNullOrEmpty(TmdbMovie?.PosterPath) ? Globals.NoImage : $"{Globals.BaseTmdbImageUrl}{TmdbMovie?.PosterPath}";
    string CollectionPosterPath => string.IsNullOrEmpty(TmdbMovie?.BelongsToCollection?.PosterPath) ? Globals.NoImage : $"{Globals.BaseTmdbImageUrl}{TmdbMovie.BelongsToCollection.PosterPath}";
    string BelongsToCollectionId => $"https://www.themoviedb.org/collection/{TmdbMovie?.BelongsToCollection?.Id}";





    protected override async Task OnParametersSetAsync()
    {
        var result = await Repository.GetByIdAsync(Id!.Value);
        //if (!result.Success) return;

        Entity = result.Data;
                
        TmdbMovie = await Service.GetMovieByIdAsync(Entity!.TmdbId!.Value);
        
        bool dateParsed = DateTime.TryParse(TmdbMovie?.ReleaseDate, out DateTime releaseDate);
        if (dateParsed) ReleaseDate = releaseDate.ToString("dd. MMMM, yyyy.");

        MovieTrailer = await Service.GetMovieTrailerByIdAsync(Entity!.TmdbId!.Value);
        Credits = await Service.GetMovieCreditsByIdAsync(Entity!.TmdbId!.Value);

        IsProcessing = false;
        StateHasChanged();
    }
}