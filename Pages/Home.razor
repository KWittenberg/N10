@page "/"
@layout FrontLayout

@inject IStringLocalizer<Home> L

<PageTitle>AIDA</PageTitle>

<div class="mt-5 @App?.GetContentClass()">

    <div class="pageStyle h-100 d-flex justify-content-center">
        <div class="row row-cols-1 row-cols-md-2 h-100">
            <div class="col d-flex flex-column justify-content-md-center order-last order-md-first">
                
                <h1 class="h1t">@L["Title"]</h1>
                <p class="h3s">@L["Subtitle"]</p>
                <p class="lead">.NET10 Blazor</p>
                @* <div class="title">App Name: A Coding Challenge</div>
                <div class="subTitle">Your app description will go here</div> *@
                <div class="mt-3">
                    <a href="chat" type="button" class="rounded btn btn-primary">Ai Chat!</a>
                </div>
                <div class="mt-5 lead">
                    Built with pride using:
                    <div class="hstack my-2">
                        <div><i class="devicons devicon-csharp-plain colored me-1"></i></div>
                        <div><i class="devicons devicon-dotnetcore-plain colored me-1"></i></div>
                        <div><i class="devicons devicon-microsoftsqlserver-plain colored me-1"></i></div>
                        <div><i class="devicons devicon-postgresql-plain colored me-1"></i></div>
                        <div><i class="devicons devicon-blazor-original colored me-1"></i></div>
                        <div><i class="devicons devicon-bootstrap-plain colored me-1"></i></div>
                        <div><i class="devicons devicon-html5-plain colored me-1"></i></div>
                        <div><i class="devicons devicon-css3-plain colored me-1"></i></div>
                        <div><i class="devicons devicon-javascript-plain colored me-1"></i></div>
                    </div>
                </div>
            </div>
            <div class="col d-flex flex-column justify-content-center">
                @* <img src="img/NET10.png" class="img-fluid" /> *@
                <_Weather City="Požega" />
            </div>
        </div>
    </div>

    <div class="py-5">
        <!-- Subtitle (mali, elegantan) -->
        <p class="h1s">Dobrodošli na naš portal</p>

        <!-- Title (veliki, u boji teme) -->
        <h1 class="h1t">MODERNA WEB RJEŠENJA</h1>

        <!-- Običan body tekst (standardni Bootstrap) -->
        <p class="lead">Ovo je uvodni tekst koji koristi Open Sans font.</p>
    </div>
    
    @* <div class="mt-5">
        <p>Current Culture: <b>@CultureInfo.CurrentCulture.DisplayName @CultureInfo.CurrentCulture.Name</b></p>
        <p>Current UI Culture: <b>@CultureInfo.CurrentUICulture.DisplayName @CultureInfo.CurrentUICulture.Name</b></p>
        <p>Localizer null: <b>@(L is null)</b></p>
    </div> *@
</div>


@code {
    [CascadingParameter] AppState? App { get; set; }
}