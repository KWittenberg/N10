@page "/tv/{id:int?}"
@layout FrontLayout

@inject ITmdbService Service


@if (IsProcessing || Entity is null)
{
    <_Loading />
}
else
{
    <title>@Entity.Name</title>
    
    @* <_YouTubeModal Entity="Entity" MovieTrailer="MovieTrailer" /> *@

    <div id="movie-details" style="--background: url(@($"{Globals.BaseTmdbImageUrl}{Entity?.BackdropPath}"))">
        <div class="@App?.GetContentClass() py-4">
            <div class="mt-5 row">
                <div class="col-12 col-md-4 col-xl-3 text-center text-md-start mb-3">
                    <img class="img-fluid" id="movie-poster" alt="movie poster" src="@($"{Globals.BaseTmdbImageUrl}{Entity?.PosterPath}")" />

                    <_Rate Entity="@Entity" />

                    @if (!string.IsNullOrEmpty(MovieTrailer?.Key))
                    {
                        <div class="mt-3" id="btn-trailer">
                            <button class="btn btn-outline-warning w-100" data-bs-toggle="modal" data-bs-target="#youtube-modal">
                                <i class="bi bi-play"></i> Watch Trailer
                            </button>
                        </div>
                    }
                    @* @if (Entity?.BelongsToCollection is not null)
                    {
                        <div class="mt-5 text-center">
                            <img class="img-fluid" id="movie-poster" alt="movie poster" src="@($"{Globals.BaseTmdbImageUrl}{Entity.BelongsToCollection.PosterPath}")" />
                            <a class="text-decoration-none" href="https://www.themoviedb.org/collection/@Entity.BelongsToCollection.Id" target="_blank">
                                <h5 class="mt-2">@Entity.BelongsToCollection.Name</h5>
                            </a>
                        </div>
                    } *@
                </div>
                <div class="col-12 col-md-8 col-xl-9">
                    <div class="p-4 rounded bg-transparent50">
                        <a href="https://www.themoviedb.org/movie/@Entity.Id" class="text-decoration-none" target="_blank">
                            <h1 class="mb-0">@Entity.Name</h1>
                        </a>
                        <div class="lead mb-3">@Entity.Tagline</div>
                        <div class="hstack gap-2">
                            <span>@ReleaseDate | </span>
                            @* <span>@(Entity?.Runtime / 60) hour(s) @(Entity?.Runtime % 60) minutes</span> *@
                        </div>
                        <div class="hstack gap-2 my-2">
                            @foreach (var genre in Entity.Genres)
                            {
                                <span class="badge bg-dark-subtle">@genre.Name</span>
                            }
                        </div>
                        
                        <h5 class="mt-4 fw-bold">Overview</h5>
                        <p>@Entity.Overview</p>

                        @* @if (Credits?.Crews is not null)
                        {
                            <_Crews Crews="Credits.Crews" />
                        }
                        @if (Credits?.Casts is not null)
                        {
                            <_Casts Casts="Credits.Casts" />
                        } *@
                    </div>

                    @* @if (Credits?.Casts is not null)
                    {
                        <_ActorSwiper Actors="@Credits.Casts" />
                    } *@
                </div>
            </div>
        </div>
    </div>
}


@code {
    [CascadingParameter] AppState? App { get; set; }

    [Parameter] public int Id { get; set; }

    TmdbTvShowDetails? Entity { get; set; }
    TmdbCredits? Credits { get; set; }
    TmdbVideo? MovieTrailer { get; set; }

    string? ReleaseDate;

    bool IsProcessing { get; set; } = true;
    


    protected override async Task OnParametersSetAsync()
    {
        Entity = await Service.GetTvShowByIdAsync(Id);
        
        // bool dateParsed = DateTime.TryParse(Entity?.ReleaseDate, out DateTime releaseDate);
        // if (dateParsed) ReleaseDate = releaseDate.ToString("dd. MMMM, yyyy.");

        // MovieTrailer = await Service.GetMovieTrailerByIdAsync(Id);
        // Credits = await Service.GetMovieCreditsByIdAsync(Id);

        IsProcessing = false;
        StateHasChanged();
    }
}