@page "/admin/roles"
@attribute [Authorize(Roles = "Admin")]

@inject IDbContextFactory<ApplicationDbContext> ContextFactory
@inject RoleManager<IdentityRole<int>> RoleManager

<PageTitle>@Title</PageTitle>

<_PageHeader Title="@Title" />

@if (roles is null)
{
    <_Loading />
}
else
{
    <div class="mt-3 @App?.GetContentClass()">
        <div class="row align-items-center">
            <div class="col-12 col-md-6">
            </div>
            <div class="p-1 col-12 col-md-6">
                <EditForm Enhance Model="@Role" OnValidSubmit="@HandleSave">
                    <DataAnnotationsValidator />
                    <div class="d-flex align-items-end">
                        <div class="input-group">
                            <InputText class="form-control" @bind-Value="Role.Name" placeholder=" name.." required />
                            <ValidationMessage For="@(() => Role.Name)" />
                            <button type="submit" class="btn btn-primary me-2">@(IsEditing ? "Update" : "New")</button>
                        </div>
                        @if (IsEditing)
                        {
                            <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                        }
                    </div>
                </EditForm>
            </div>
        </div>
        <div class="quickgrid-wrapper table-responsive">
            <QuickGrid Class="table align-middle" Items="roles.AsQueryable()">
                <PropertyColumn Property="x => x.Id" Title="Id" Align="Align.Center" Sortable="true" />
                <PropertyColumn Property="x => x.Name" Title="Name" Align="Align.Center" Sortable="true" />
                <PropertyColumn Property="x => x.NormalizedName" Title="NormalizedName" Align="Align.Center" Sortable="true" />

                <TemplateColumn Title="Actions" Align="Align.Center">
                    <ChildContent>
                        <span class="text-primary" @onclick="() => EditRole(context)"><i class="bi bi-pencil-square"></i></span>
                        <span class="ms-2 text-danger" @onclick="() => DeleteRole(context)"><i class="bi bi-trash"></i></span>
                    </ChildContent>
                </TemplateColumn>
            </QuickGrid>
        </div>
    </div>
}


@code {
    [CascadingParameter] AppState? App { get; set; }

    List<IdentityRole<int>>? roles;
    IdentityRole<int> Role = new();

    bool IsEditing = false;
    string Title = "Roles";


    protected override async Task OnInitializedAsync() => await LoadAsync();
    
    async Task LoadAsync()
    {
        await using var context = await ContextFactory.CreateDbContextAsync();
        roles = await context.Roles.AsNoTracking().OrderBy(r => r.Name).ToListAsync();
    }

    void EditRole(IdentityRole<int> role)
    {
        Role = new IdentityRole<int>
        {
            Id = role.Id,
            Name = role.Name ?? string.Empty
        };
        IsEditing = true;
    }

    void CancelEdit()
    {
        Role = new IdentityRole<int>();
        IsEditing = false;
    }

    async Task HandleSave()
    {
        if (string.IsNullOrWhiteSpace(Role.Name)) return;

        try
        {
            if (IsEditing)
            {
                var existingRole = await RoleManager.FindByIdAsync(Role.Id.ToString());
                if (existingRole != null)
                {
                    existingRole.Name = Role.Name;
                    await RoleManager.UpdateAsync(existingRole);
                }
            }
            else await RoleManager.CreateAsync(Role);// Kreiraj novu role
            
            await App!.ShowToast($"Role {(IsEditing ? "updated" : "created")} successfully!", "success");
            CancelEdit();
            await LoadAsync();
        }
        catch (Exception ex)
        {
            await App!.ShowToast($"Failed to save role: {ex.Message}", "error");
        }
    }

    #region ---> DELETE
    void DeleteRole(IdentityRole<int> role)
    {
        App?.ShowDeleteConfirmation(role.Name, role.Id.ToString(), EventCallback.Factory.Create(this, () => ConfirmDelete(role)));
    }

    async Task ConfirmDelete(IdentityRole<int> role)
    {
        await using var context = await ContextFactory.CreateDbContextAsync();
        var hasUsers = await context.UserRoles.AnyAsync(ur => ur.RoleId == role.Id);

        if (hasUsers)
        {
            await App!.ShowToast("Cannot delete role that has users assigned!", "error");
            return;
        }

        try
        {
            context.Roles.Remove(role);
            await context.SaveChangesAsync();
            await App!.ShowToast("Role deleted successfully!", "success");
            await LoadAsync();
        }
        catch (Exception ex)
        {
            await App!.ShowToast($"Failed to delete role: {ex.Message}", "error");
        }
    }
    #endregion
}