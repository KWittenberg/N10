<EditForm Model=@Input OnValidSubmit=@HandleValidSubmit Enhance>
    <DataAnnotationsValidator />
    
    <div class="mt-4 m-0 row">
        <!-- Avatar -->
        <div class="p-1 col-12 col-md-4">
            <div class="p-3 rounded bg-transparent10">
                <div class="d-flex justify-content-center">
                    <img src="@Input.AvatarUrl" alt="Avatar" class="rounded-circle border border-2 border-secondary" style="width: 150px; height: 150px; object-fit: cover;" /> 
                </div>
                <div class="d-flex justify-content-center align-items-center">
                    <div class="w-100">
                        <span class="ms-1 p-sm">Avatar Url</span>
                        <InputText @bind-Value="Input.AvatarUrl" class="form-control form-control-sm" />
                        <ValidationMessage For="() => Input.AvatarUrl" class="text-danger" />
                    </div>
                    @*  <div class="">
                <span class="ms-1 p-sm">Metadata</span>
                <InputCheckbox @bind-Value="Input.IsMetadataFetched" class="form-check form-check-input" />
            </div> *@
                </div>
            </div>
        </div>
        <!-- Name -->
        <div class="p-1 col-12 col-md-4">
            <div class="p-3 rounded border bg-transparent20">
                <div class="mt-3">
                    <span class="ms-1 p-sm">First Name</span>
                    <InputText @bind-Value="Input.FirstName" class="form-control form-control-sm" placeholder="required.." required />
                    <ValidationMessage For="() => Input.FirstName" class="text-danger" />
                </div>
                <div class="mt-3">
                    <span class="ms-1 p-sm">Last Name</span>
                    <InputText @bind-Value="Input.LastName" class="form-control form-control-sm" placeholder="required.." required />
                    <ValidationMessage For="() => Input.LastName" class="text-danger" />
                </div>
                <div class="mt-3">
                    <span class="ms-1 p-sm">Company Name</span>
                    <InputText @bind-Value="Input.CompanyName" class="form-control form-control-sm" />
                    <ValidationMessage For="() => Input.CompanyName" class="text-danger" />
                </div>
                <div class="mt-3">
                    <span class="ms-1 p-sm">Date Of Birth</span>
                    <InputDate @bind-Value="Input.DateOfBirth" class="form-control form-control-sm" />
                    <ValidationMessage For="() => Input.DateOfBirth" class="text-danger" />
                </div>

                <div class="d-flex align-items-center">
                    <div class="mt-5 w-100">
                        <span class="ms-1 p-sm">Email</span>
                        <InputText @bind-Value="Input.Email" class="form-control form-control-sm" placeholder="required.." required />
                        <ValidationMessage For="() => Input.LastName" class="text-danger" />
                    </div>
                    @if (Input.Id.HasValue)
                    {
                        <div class="ms-3 mt-5 w-25">
                            <span class="ms-1 p-sm">Confirmed</span>
                            <InputCheckbox @bind-Value="Input.EmailConfirmed" class="form-check form-check-input" />
                        </div>
                    }
                </div>
                @if (!Input.Id.HasValue)
                {
                    <div class="mt-3">
                        <span class="ms-1 p-sm">Password</span>
                        <InputText @bind-Value="Input.Password" class="form-control form-control-sm" placeholder="required.." required />
                        <ValidationMessage For="() => Input.Password" class="text-danger" />
                    </div>
                }
                <div class="d-flex align-items-center">
                    <div class="mt-3 w-100">
                        <span class="ms-1 p-sm">Phone Number</span>
                        <InputText @bind-Value="Input.PhoneNumber" class="form-control form-control-sm" />
                        <ValidationMessage For="() => Input.PhoneNumber" class="text-danger" />
                    </div>
                    @if (Input.Id.HasValue)
                    {
                        <div class="ms-3 mt-3 w-25">
                            <span class="ms-1 p-sm">Confirmed</span>
                            <InputCheckbox @bind-Value="Input.PhoneNumberConfirmed" class="form-check form-check-input" />
                        </div>
                    }
                </div>
            </div>
        </div>
        <!-- Place -->
        <div class="p-1 col-12 col-md-4">
            <div class="p-3 rounded border bg-transparent20">
                <div class="mt-3">
                    <span class="ms-1 p-sm">Country</span>
                    <InputText @bind-Value="Input.Country" class="form-control form-control-sm" />
                    <ValidationMessage For="() => Input.Country" class="text-danger" />
                </div>
                <div class="mt-3">
                    <span class="ms-1 p-sm">Zip</span>
                    <InputText @bind-Value="Input.Zip" class="form-control form-control-sm" />
                    <ValidationMessage For="() => Input.Zip" class="text-danger" />
                </div>
                <div class="mt-3">
                    <span class="ms-1 p-sm">City</span>
                    <InputText @bind-Value="Input.City" class="form-control form-control-sm" />
                    <ValidationMessage For="() => Input.City" class="text-danger" />
                </div>
                <div class="mt-3">
                    <span class="ms-1 p-sm">Street</span>
                    <InputText @bind-Value="Input.Street" class="form-control form-control-sm" />
                    <ValidationMessage For="() => Input.Zip" class="text-danger" />
                </div>
                <div class="mt-5">
                    <span class="ms-1 p-sm">Latitude</span>
                    <InputNumber @bind-Value="Input.Latitude" class="form-control form-control-sm" />
                    <ValidationMessage For="() => Input.Latitude" class="text-danger" />
                </div>
                <div class="mt-3">
                    <span class="ms-1 p-sm">Longitude</span>
                    <InputNumber @bind-Value="Input.Longitude" class="form-control form-control-sm" />
                    <ValidationMessage For="() => Input.Longitude" class="text-danger" />
                </div>
                <div class="mt-3">
                    <span class="ms-1 p-sm">PlaceId</span>
                    <InputText @bind-Value="Input.PlaceId" class="form-control form-control-sm" />
                    <ValidationMessage For="() => Input.PlaceId" class="text-danger" />
                </div>
            </div>
        </div>
    </div>
    <div class="mt-3 d-flex justify-content-end align-items-end">
        @* <h1>@Title</h1> *@
        <div class="d-flex align-items-end gap-2">
            <button class="btn btn-sm btn-outline-secondary rounded-pill" @onclick="() => OnBack.InvokeAsync()">back</button>
            <button class="btn btn-lg btn-primary rounded-pill" type="submit">@Title</button>
        </div>
    </div>
</EditForm>


@code {
    [CascadingParameter] AppState? App { get; set; }

    [Parameter] public UserDto? Input { get; set; }
    [Parameter] public EventCallback OnBack { get; set; }

    string Title => Input!.Id.HasValue ? "Update" : "New";


    protected override void OnParametersSet()
    {
        Input ??= new UserDto();
    }

