<!-- Register Confirmation -->

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Krešimir Wittenberg">

</head>

<body style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;line-height: 1.7;color: #333;margin: 0;padding: 0;background-color: #f4f4f4;">
    <div class="container" style="max-width: 650px;margin: 20px auto;background-color: #ffffff;border-radius: 12px;overflow: hidden;box-shadow: 0 0 25px rgba(0,0,0,0.1);">
        <div class="header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);color: white;padding: 45px 35px;text-align: center;">
            <h1 style="margin: 0;font-size: 30px;font-weight: 600;letter-spacing: -0.5px;">AIDA</h1>
            <p class="subtitle" style="margin: 10px 0 0 0;font-size: 16px;opacity: 0.95;">Artificial Intelligence Decision Agent</p>
        </div>
        <div class="content" style="padding: 45px 40px;">
            <p style="margin: 0 0 18px 0;font-size: 16px;line-height: 1.8;">Please click the button below to complete your registration.</p>
            <p style="margin: 0 0 18px 0;font-size: 16px;line-height: 1.8;">Once you have completed the process, you can start using our service.</p>

            <center><a href="@ConfirmationUrl" class="cta-button" target="_blank" style="display: inline-block;background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);text-decoration: none;padding: 16px 45px;border-radius: 50px;font-weight: 600;font-size: 16px;margin: 25px 0;box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);transition: all 0.3s;color: white !important;">Complete your registration !</a></center>

            <div class="highlight-box" style="background-color: #f8f9fa;border-left: 4px solid #667eea;padding: 10px 25px;margin: 25px 0;border-radius: 5px;">
                <h3 style="margin: 0 0 15px 0;color: #667eea;font-size: 12px;display: flex;align-items: center;gap: 8px;">If you have any questions simply reply to this email and we would be more than happy to reply. :)</h3>
            </div>


            <div class="signature" style="display: flex;align-items: center;background-color: #f8f9fa;padding: 20px;">
                <div class="image">
                    <img src="https://kwittenberg.github.io/Portfolio/images/avatar.jpg" alt="aida" class="avatar-img" style="width: 100px;height: 100px;display: block;border: 0;">
                </div>

                <div class="vertical-divider" style="width: 2px;background-color: #667eea;height: 100px;margin: 0 10px;"></div>

                <div class="signature-info" style="display: flex;flex-direction: column;">
                    <div class="name-title">
                        <p class="name" style="font-weight: 600;color: #667eea;margin: 0 0 18px 0;line-height: 1.8;font-size: 16px;">AIDA</p>
                        <p class="title" style="margin: 0 0 18px 0;line-height: 1.8;font-size: 16px;">Artificial Intelligence Decision Agent</p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>


@code {

    [Parameter] public string? ConfirmationUrl { get; set; } = string.Empty;

}