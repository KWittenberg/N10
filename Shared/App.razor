@code {
    [CascadingParameter] HttpContext HttpContext { get; set; } = default!;

    // .NET 10 Way
    IComponentRenderMode? PageRenderMode => HttpContext.AcceptsInteractiveRouting() ? InteractiveServer : null;

    // .NET 9 Way
    // IComponentRenderMode? PageRenderMode => HttpContext.AcceptsInteractiveRouting() ? new InteractiveServerRenderMode(prerender: false) : null;

    // .NET 8 Way
    // IComponentRenderMode? PageRenderMode => HttpContext.Request.Path.StartsWithSegments("/Account") ? null : new InteractiveServerRenderMode(prerender: false);



    protected override void OnInitialized()
    {
        Navigation.LocationChanged += HandleLocationChanged;
        base.OnInitialized();
    }

    void HandleLocationChanged(object? sender, LocationChangedEventArgs args)
    {
        var uri = new Uri(args.Location);
        var query = QueryHelpers.ParseQuery(uri.Query);

        if (query.TryGetValue("culture", out var cultureName))
        {
            var culture = new CultureInfo(cultureName!);
            CultureInfo.CurrentCulture = culture;
            CultureInfo.CurrentUICulture = culture;
            StateHasChanged();
        }
    }

    public void Dispose() => Navigation.LocationChanged -= HandleLocationChanged;
}