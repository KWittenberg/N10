<!-- NavBar -->
@* <div class="navbar container" style="background-image: url('@(string.IsNullOrEmpty(App.Background?.ImageUrl) ? Placeholder.BackgroundUrl : App.Background?.ImageUrl)')"> *@
<div class="navbar container" style="background-image: url('@(Globals.BgUrl)');">
    <AuthorizeView Roles="Admin">
        <NotAuthorized>
            <span class="logo">
                <img src="img/logo/a-logo.png" alt="logo">
                <span class="d-none d-md-inline"><b>AI</b>DA</span>
            </span>
        </NotAuthorized>
        <Authorized>
            <a class="logo" href="/admin">
                <img src="img/logo/a-logo.png" alt="logo">
                <span class="d-none d-md-inline"><b>AI</b>DA</span>
            </a>
        </Authorized>
    </AuthorizeView>


    <div class="d-flex justify-content-center align-items-center gap-3">
        <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
            <span class="d-none d-md-inline">Home</span>
        </NavLink>
        <NavLink class="nav-link" href="notes" Match="NavLinkMatch.All">
            <span class="d-md-none" data-bs-toggle="tooltip" data-bs-placement="auto" data-bs-custom-class="custom-tooltip" data-bs-title="Notes">
                <i class="fs-4 bi bi-stickies-fill"></i>
            </span>
            <span class="d-none d-md-inline">Notes</span>
        </NavLink>
        <NavLink class="nav-link" href="movies" Match="NavLinkMatch.All">
            <span class="d-md-none" data-bs-toggle="tooltip" data-bs-placement="auto" data-bs-custom-class="custom-tooltip" data-bs-title="Movies">
                <i class="fs-4 bi bi-film"></i>
            </span>
            <span class="d-none d-md-inline">Movies</span>
        </NavLink>
    </div>

    <div class="d-flex justify-content-end align-items-center">
        <i class="bi @(App!.IsExpanded ? "bi bi-distribute-horizontal" : "bi bi-distribute-vertical") me-2" @onclick="OnChangeContent"></i>

        <AuthorizeView>
            <NotAuthorized>
                <a class="navbar-login" href="Account/Login">Login</a>
                <a class="navbar-login" href="Account/Register">Register</a>
            </NotAuthorized>
            <Authorized>
                <div class="d-flex justify-content-center align-items-center gap-3">
                    <div>
                        <a type="button" data-bs-toggle="dropdown">
                            <img class="rounded-circle"
                                 src="@(string.IsNullOrEmpty(App?.CurrentUser?.AvatarUrl) ? Placeholder.AvatarUrl : App?.CurrentUser?.AvatarUrl)" style="width: 2rem;"
                                 title="Account">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end bg-page-product shadow">
                            <li><a class="dropdown-item text-end" href="Account/Manage">Account</a></li>
                            <li><a class="dropdown-item text-end" href="orders">Orders</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li class="dropdown-item">
                                <form action="Account/Logout" method="post" class="d-flex justify-content-end">
                                    <AntiforgeryToken />
                                    <input type="hidden" name="ReturnUrl" value="" />
                                    <button type="submit" class="ms-2 logout-button">
                                        <i class="bi bi-box-arrow-right me-1"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
</div>


