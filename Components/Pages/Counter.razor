@page "/counter"

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<button class="btn btn-danger" @onclick="DivideByZero">Divide by Zero</button>



@code {
    
	int currentCount = 0;
    int zero = 0;

    
    
    void IncrementCount() => currentCount++;
    
    void DivideByZero()
    {
		var result = currentCount / zero;
	}
}